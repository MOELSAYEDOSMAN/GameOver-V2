@using GameOver_V2.Data
@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
    List<Game> TopGame = ViewBag.TopGame;
    List<Game> FreeGame = ViewBag.Free_Game;
    List<GameOverNews> News = ViewBag.news;
}

<div class="background-home-page">
    <div class="background-shadow-button">
        <div class="text-background">
            <p>We have come to</p>
            <h1>GAME OVER</h1>
            <form action="#list1-topgames">
                <button class="button-background">
                    <div></div>
                </button>
            </form>
        </div>
    </div>
</div>

<div class="photo1-home" id="photo-home">
    <div class="photo1-first"><img src="/Img/p46.jpg"></div>
    <hr>
    <div class="text-nextTo-photo1">
        <p class="text-games-p1">GAMES</p>
        <h1>The best games ever<br>Develop your own game</h1><br>
        <p class="text-games-p2">We offer you the strongest and best various games that you can download easily <br>The largest selection of famous games that you can download now with ease and the surest way<br>The most powerful games ,in the world</p>
    </div>
</div>
<div class="list1-top-games" id="list1-topgames">

    <p class="text-top-games">TOP GAMES</p>
    <!--                      list1 card gaming           -->

    <section class="cards">
        @foreach(var g in TopGame)
        {
            <article class="card card--1">
                <div class="card__info-hover">
                    <svg class="card__like" viewBox="0 0 24 24">
                        @if (g.Age == true)
                        {
                            <span>+18</span>
                        }
                    </svg>
                    <div class="card__clock-info">
                        <svg class="card__clock" viewBox="0 0 24 24">
                            <path d="M12,20A7,7 0 0,1 5,13A7,7 0 0,1 12,6A7,7 0 0,1 19,13A7,7 0 0,1 12,20M19.03,7.39L20.45,5.97C20,5.46 19.55,5 19.04,4.56L17.62,6C16.07,4.74 14.12,4 12,4A9,9 0 0,0 3,13A9,9 0 0,0 12,22C17,22 21,17.97 21,13C21,10.88 20.26,8.93 19.03,7.39M11,14H13V8H11M15,1H9V3H15V1Z" />
                        </svg><span class="card__time">@g.DateDownload.Year</span>
                    </div>
                </div>
                <div class="card__img" style="background-image: url('img\backgroundgame\@g.iconSrc');"></div>
                <a href="/Home/Game/@g.Name.Replace(" ","")" class="card_link">
                    <div style="background-image:url(/img/backgroundgame/@g.iconSrc)" class="card__img--hover"></div>
                </a>
                <div class="card__info">
                    <span class="card__category"> @g.Type</span>
                    <h3 class="card__title">@g.Name</h3>
                    <span class="card__by"><a href="#" class="card__author" title="author"><h3>@g.Price</h3></a></span>
                </div>
            </article>
        }
    </section>
</div>

<hr />
<h3 style="margin-left=12px;">News :</h3>
<div class="list2-3photo">

    <!--Need To For Lopp News-->
@foreach(var n in News)
{
        <div class="photo1-list2">
            <a href="/News/@n.News"><img src="~/Img/News/@n.ImgSrc" width="470px" height="280px"></a>
            <h1>@n.Title</h1>
            <p class="text1-3photo">@n.Dec</p><br>

        </div>
}
    
</div>
@if(FreeGame.Count!=0)
{
    <div class="games-free">
        <div class="icon-free">
            <p>Free Games</p><i class="fa-solid fa-gift"></i>
            <button class="button-free"> VIEW MORE</button>
        </div>
        <div class="game-free1">

            <!--Need To For Lopp Free Game-->
            @foreach (var g in FreeGame)
            {
                <article class="card card--1">
                    <div class="card__info-hover">
                        <svg class="card__like" viewBox="0 0 24 24">
                            @if (g.Age == true)
                            {
                                <span>+18</span>
                            }
                        </svg>
                        <div class="card__clock-info">
                            <svg class="card__clock" viewBox="0 0 24 24">
                                <path d="M12,20A7,7 0 0,1 5,13A7,7 0 0,1 12,6A7,7 0 0,1 19,13A7,7 0 0,1 12,20M19.03,7.39L20.45,5.97C20,5.46 19.55,5 19.04,4.56L17.62,6C16.07,4.74 14.12,4 12,4A9,9 0 0,0 3,13A9,9 0 0,0 12,22C17,22 21,17.97 21,13C21,10.88 20.26,8.93 19.03,7.39M11,14H13V8H11M15,1H9V3H15V1Z" />
                            </svg><span class="card__time">@g.DateDownload.Year</span>
                        </div>
                    </div>
                    <div class="card__img" style="background-image: url('img\backgroundgame\@g.iconSrc');"></div>
                    <a href="/Home/Game/@g.Name.Replace(" ","")" class="card_link">
                        <div style="background-image:url(/img/backgroundgame/@g.iconSrc)" class="card__img--hover"></div>
                    </a>
                    <div class="card__info">
                        <span class="card__category"> @g.Type</span>
                        <h3 class="card__title">@g.Name</h3>
                        <span class="card__by"><a href="#" class="card__author" title="author"><h3>@g.Price</h3></a></span>
                    </div>
                </article>

            }
        </div>
    </div>

}


